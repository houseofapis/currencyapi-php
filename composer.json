{
  "name": "houseofapis/currencyapi",
  "type": "library",
  "description": "Composer package for the CurrencyApi.net JSON & XML live currency feed",
  "keywords": ["currency","feed","api","live-rates", "json currency", "crypto"],
  "homepage": "https://currencyapi.net",
  "license": "MIT",
  "authors": [
    {
      "name": "Oli Girling",
      "email": "support@currencyapi.net",
      "homepage": "https://currencyapi.net",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1.0|^8",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-simplexml": "*"
  },
  "autoload": {
    "psr-4": {
      "HouseOfApis\\CurrencyApi\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "php-mock/php-mock-phpunit": "^2.7",
    "php-coveralls/php-coveralls": "^2.6"
  }
}
